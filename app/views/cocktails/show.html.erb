<h1>Cocktail: <%= @cocktail.name %> </h1>
<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= "#{dose.description} de #{dose.ingredient.name}" %>


    <%= link_to cocktail_dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt destroy_dose"></i>
        <% end %>
    <% end %>
  </li>
</ul>

<p><%= link_to '(+) Add new ingredients to the cocktail', new_cocktail_dose_path(@cocktail) %></p>


<p><%= link_to '( <= ) Back to cocktails', cocktails_path(@cocktails) %></p>
